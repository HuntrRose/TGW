<UserControl x:Class="TGWv2.UnitControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TGWv2"
             xmlns:vm="clr-namespace:TGWv2.ViewModel"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <UserControl.Resources>
        <vm:UnitCenterToMarginConverter x:Key="PositionConverter"/>
        <vm:UnitImageConverter x:Key="ImageConverter"/>
    </UserControl.Resources>
    <Image Grid.ZIndex="2"  Margin="{Binding Center,Converter={StaticResource PositionConverter}}" Source="{Binding . ,Converter={StaticResource ImageConverter}}" Width="60" Height="60" VerticalAlignment="Top" HorizontalAlignment="Left" ></Image>
</UserControl>
